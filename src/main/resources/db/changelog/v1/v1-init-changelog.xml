<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="2025-05-23-16-15-00"
               author="Ivan Zinovich">
        <createTable tableName="hotel">
            <column autoIncrement="true"
                    name="id"
                    type="INT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_hotel"/>
            </column>
            <column name="name"
                    type="VARCHAR(255)"/>
            <column name="description"
                    type="VARCHAR(255)"/>
            <column name="brand"
                    type="VARCHAR(255)"/>
            <column name="check_in"
                    type="VARCHAR(255)"/>
            <column name="check_out"
                    type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2025-05-23-16-20-00"
               author="Ivan Zinovich">
        <createTable tableName="hotel_contact">
            <column autoIncrement="true"
                    name="id"
                    type="INT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_hotel_contact"/>
            </column>
            <column name="phone"
                    type="VARCHAR(255)"/>
            <column name="email"
                    type="VARCHAR(255)"/>
            <column name="house_number"
                    type="INT"/>
            <column name="street"
                    type="VARCHAR(255)"/>
            <column name="city"
                    type="VARCHAR(255)"/>
            <column name="country"
                    type="VARCHAR(255)"/>
            <column name="post_code"
                    type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2025-05-23-16-25-00"
               author="Ivan Zinovich">
        <addForeignKeyConstraint baseColumnNames="id"
                                 baseTableName="hotel_contact"
                                 constraintName="FK_HOTEL_CONTACT_ON_ID"
                                 referencedColumnNames="id"
                                 referencedTableName="hotel"/>
    </changeSet>

</databaseChangeLog>